//URL PART
function boolean isURL( String value ){

	if(value == null || value.trim().equals("")){
		return true;
	}
    try {
         new URL(value).toURI();
         return true;
    }catch (URISyntaxException exception) {
         return false;
    }catch (MalformedURLException exception) {
         return false;
    }
 }


//NUMBER PART 
function boolean isNegativeValue(String value, String typeData){
 
	if(typeData.equalsIgnoreCase("Integer")){
		try {
	        Integer dato = Integer.valueOf(value);
	        if(dato < 0){
	        	return false;        
	        }
	    } catch( Exception e ){
	        return true;
	    }
 	}
 	return true;
}
 
function boolean isValid( String value , String typeData){

	if(typeData.equalsIgnoreCase("Integer")){
	
	 	try {
	        Integer.valueOf( value );
	        return true;
	    } catch( Exception e ){
	        return false;
	    }
	}
    try {
    	String aux = value.replace(".","");
    	aux = aux.replace(",",".");
        Double.valueOf( aux );
        return true;
    } catch( Exception e ){
        return false;
    }
 }
 


//TEXT AND NULL PART
function boolean isText( String value){
    try {
        Pattern pat = Pattern.compile("[^a-zA-Z0-9 ._-]$");
       	Matcher mat = pat.matcher(value);
        if(mat.find()){ 
        	return true;
        }else{
        	return false;
        }
    } catch( Exception e ){
        return false;
    }
 }
 
function boolean isBlank(String value){

	if(StringUtils.isBlank(value)){
		return false;
	}else{
		return true;
	}
} 

